<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.instagram.fragment.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_pesquisa"
        android:name="com.example.instagram.fragment.PesquisaFragment"
        android:label="Pesquisa"
        tools:layout="@layout/fragment_pesquisa" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.instagram.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_store"
        android:name="com.example.instagram.fragment.StoreFragment"
        android:label="Loja"
        tools:layout="@layout/fragment_store" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.instagram.fragment.PerfilFragment"
        android:label="Perfil"
        tools:layout="@layout/fragment_perfil" />

</navigation>