<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imagePerfilFeed"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/padrao" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textNomeFeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:text="usuario"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textLocalizacaoFeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Lagoa Rodrigo de freitas"
                android:textSize="13sp"
                android:visibility="invisible" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imagePontosFeed"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_marginStart="190dp"
            android:layout_marginEnd="16dp"
            android:foregroundGravity="center"
            app:srcCompat="@drawable/dots" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageFeed"
            android:layout_width="match_parent"
            android:layout_height="420dp"
            android:layout_marginTop="0dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/avatar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageLikeFeed"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/coracao" />

        <ImageView
            android:id="@+id/imageChatFeed"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/chat" />

        <ImageView
            android:id="@+id/imageEnviarDmFeed"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:rotation="20"
            app:srcCompat="@drawable/s" />


        <ImageView
            android:id="@+id/imageSalvarFeed"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_marginStart="230dp"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/save" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textCurtidasFeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="52.825 curtidas"
            android:textColor="#554F4F"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textNomeAbaixoFeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="usuario Texto da publicação bala bla bla Texto da publicação bala bla bla Texto da publicação bala bla bla"
            android:textColor="#4A4646"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textVerComentariosFeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver todos os comentários"
            android:textColor="#4A4646"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textVerTraducaoFeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver tradução"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textHaFeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Há 2 dias"
            android:textSize="10sp" />
    </LinearLayout>

</LinearLayout>